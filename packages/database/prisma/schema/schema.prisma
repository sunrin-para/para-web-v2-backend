generator client {
  provider        = "prisma-client-js"
  output          = "../../client"
  previewFeatures = ["prismaSchemaFolder"]
}

generator erd {
  provider = "prisma-erd-generator"
  output = "../../output/ERD.png"
  // theme = "dark"
  disabled = env("DISABLE_ERD")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
