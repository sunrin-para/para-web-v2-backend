model User {
  uid        Int        @id @default(autoincrement())
  email      String     @unique
  password   String?
  name       String
  permission Permission @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshToken  String?
  validationKey String?
}

enum Permission {
  SUPER
  MODERATOR
  MANAGER
  USER
}
